@model MVC_Project.WebBackend.Models.ChargeClientFilterViewModel
@using MVC_Project.WebBackend.AuthManagement
@using MVC_Project.WebBackend.AuthManagement.Models
@{
    ViewBag.Title = "Cuentas";

    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    AuthUser user = (AuthUser)Authenticator.AuthenticatedUser;
    var hasFullAccessController = user.HasFullAccessController(controllerName);
}

@section styles {
    <style>
        .hide {
            display: none;
        }

        .custom-file-label::after {
            content: "Buscar"
        }
    </style>
}

<div class="wrapper wrapper-content wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins box-degradient">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    @using (Html.BeginForm("GetClients", "Charges", FormMethod.Post, new { @id = "SearchForm" }))
                    {
                        @*<div class="ibox-title">
                            <h5>Búsqueda</h5>
                        </div>*@
                        <div class="ibox-content clearfix">
                            <div class="row">
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.BusinessName, new { @class = "" })*@
                                        <br />
                                        @Html.TextBoxFor(m => m.BusinessName, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "200", @autocomplete = "none", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.BusinessName).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.Rfc)*@
                                        <br />
                                        @Html.TextBoxFor(m => m.Rfc, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "13", @autocomplete = "none", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.Rfc).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.AccountOwner)*@
                                        <br />
                                        @Html.TextBoxFor(m => m.AccountOwner, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "200", @autocomplete = "none", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.AccountOwner).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Status)
                                        @Html.DropDownListFor(x => x.Status, Model.Statuses, new { @class = "chosen-select form-control", data_live_search = "true", data_style = "btn-default", style = "position: relative;", filtro = "true", filtro_order = "2" })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 col-lg-4 offset-lg-8 text-right">
                                    <br />
                                    <button type="button" class="btn btn-sm btn-button btn-filter-rol"><i class="fas fa-search"></i> Buscar</button>
                                    &nbsp;
                                    <button type="button" id="btnClearForm" class="btn btn-sm btn-button"><i class="fas fa-eraser "></i> Limpiar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Resultado</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="table" class="table table-striped table-bordered"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/custom/Utils")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/daterangepicker")
    @Scripts.Render("~/plugins/jqueryFileDownload.js")

    <script>
        $(function () {
            var customer = new ChargesIndexControlador('table',
                '@Url.Action("GetClients")',
                '@Url.Action("Edit")',
                '@hasFullAccessController' == 'True'
            );
            customer.init();
        });
    </script>

    @Scripts.Render("~/views/chargesIndex")
}
