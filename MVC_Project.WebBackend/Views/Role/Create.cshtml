@model MVC_Project.WebBackend.Models.RoleCreateViewModel

@{
    ViewBag.Title = "Roles del sistema";
}

@section Styles {
    @Styles.Render("~/Content/template/plugins/chosen/chosenStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Crear Rol</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Create", "Role", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "CreateForm" }))
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Name, new { @class = "col-form-label control-label col-md-2", required = "required" })
                            <div class="col-md-8">
                                @Html.EditorFor(model => model.Name, new { @class = "form-control", MaxLength = "30", required = "required" })
                                @Html.ValidationMessageFor(model => model.Name)
                            </div>
                        </div>

                        <div class="form-group">
                            <label class = "col-form-label control-label col-md-2">Permisos</label>
                            <div class="tabs-container col-md-8 offset-2" style="padding: 0px">
                                <div class="tabs-left">
                                    <ul class="nav nav-tabs">
                                        @for (int i = 0; i < Model.Features.Count; i++)
                                        {
                                            var status = i == 0 ? "active" : "";
                                            <li><a class="nav-link @status" data-toggle="tab" href="#tab-@i"> @Model.Features[i].Name</a></li>
                                            @Html.HiddenFor(model => model.Features[i].Id)
                                        }
                                    </ul>
                                    <div class="tab-content">
                                        @for (int i = 0; i < Model.Features.Count; i++)
                                        {
                                            var status = i == 0 ? "active" : "";
                                            <div id="tab-@i" class="tab-pane @status">
                                                <div class="panel-body">
                                                    @for (int j = 0; j < Model.Features[i].Permissions.Count; j++)
                                                    {

                                                    <div class="row">
                                                        <div class="col-md-2" style="text-align:right">
                                                            @Model.Features[i].Permissions[j].Name
                                                            @Html.HiddenFor(model => model.Features[i].Permissions[j].Id)
                                                        </div>
                                                        <div class="col-md-10">
                                                            @Html.DropDownListFor(model => model.Features[i].Permissions[j].SystemAction, Model.Features[i].Permissions[j].SystemActions,
                                                            new { @class = "chosen-select", data_placeholder = "Selecciona tipo", @required = "required", @style = "width: 100%" })
                                                        </div>
                                                    </div>

                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    
                                </div>
                                </div>
                            </div>


                        <div class="form-group row pull-right">
                            <div class="col-md-8 offset-2 text-right">
                                <a href='@Url.Action("Index", "Role")' class='btn btn-white'><i class="fa fa-times"></i> Cancelar</a>
                                <button type="submit" class="btn btn-color"> <i class="fa fa-save"></i> Guardar </button>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/validate")

    <script type="text/javascript">
        $(document).ready(function () {
            $('.chosen-select').chosen({ width: '100%', "disable_search": true });
            $("#CreateForm").validate({
                rules: {
                    Name: {
                        required: true,
                        maxlength: 50
                    },
                    Code: {
                        required: true,
                        maxlength: 20
                    }
                }
                ,
                messages: {
                    Name: {
                        required: "Campo obligatorio",
                        maxlength: jQuery.validator.format("Ingrese no más de {0} caracteres."),
                    },
                    Code: {
                        required: "Campo obligatorio",
                        maxlength: jQuery.validator.format("Ingrese no más de {0} caracteres."),
                    }
                }
            })
        });
        function validarDatos() {
            if (!$('#CreateForm').valid()) {
                return;
            }
            $('#CreateForm').submit();
        }
    </script>
}
