@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div id="selectAccountModal" class="modal fade hidden-print" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="dialog">
            <div class="modal-content"></div>
        </div>
    </div>
</div>

<div class="row">
    <div id="createAccountModal" class="modal fade hidden-print" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg" role="dialog">
            <div class="modal-content"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        
        $(document).ready(function () {
            selectAccountModal();
        });

        function selectAccountModal() {
            $("#selectAccountModal").find('.modal-content').load("@Url.Action("SelectAccount")", function () {
                $("#selectAccountModal").modal({backdrop: 'static', keyboard: false });
            });
        }
        function createAccountModal() {
            $("#selectAccountModal").modal('hide');
            $("#createAccountModal").find('.modal-content').load("@Url.Action("CreateAccountModal")", function () {
                $("#createAccountModal").modal({ backdrop: 'static', keyboard: false });
            });
            $("#createAccountModal").on('shown.bs.modal', function () {
                $("#wizard").steps();
            });
            $("#createAccountModal").on('hidden.bs.modal', function () {
                selectAccountModal();
            });
        }
    </script>
}