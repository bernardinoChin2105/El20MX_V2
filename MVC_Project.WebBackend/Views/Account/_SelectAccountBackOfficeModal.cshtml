@model MVC_Project.WebBackend.Models.AccountSelectViewModel
@{
    Layout = null;
    string mensaje = ViewBag.mensajeError;
}

<div class="modal-header">
    <div class="modal-title">
        <h3>Selecciona la cuenta que quieres usar</h3>
    </div>

    @*<button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
    </button>*@
</div>

<div class="modal-body">
    <div class="form-horizontal">
        <div class="form-group row">
            @Html.DropDownListFor(model=>model.accountListItem, Model.accountListItems, "Entrar como administrador",
           new { @class = "chosen-select", data_placeholder = "Selecciona una cuenta", @required = "required", @style = "width: 100%" })
        </div>
        <div class="form-group row pull-right">
            <div class="col-md-12 text-right">
                @*<a href='@Url.Action("Index", "Role")' class='btn btn-white'><i class="fa fa-times"></i> Cancelar</a>*@
                <button type="button" id="btnSelectAccount" class="btn btn-button"> <i class="fa fa-check"></i> Aceptar </button>
            </div>
        </div>
    </div>
</div>
