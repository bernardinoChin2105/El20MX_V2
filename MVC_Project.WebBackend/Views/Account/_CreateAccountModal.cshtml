
@{
    ViewBag.Title = "_CreateAccountModal";
}
<div class="modal-header">
    <div class="modal-title">
        <h3>Configuración de cuenta</h3>
    </div>

    <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">
    <div class="row">
        @*<div id="wizard" class="wizard-big">*@
            <!--RFC-->
            <div class="col-md-8 offset-2">
                <form id="RegisterRFCForm">
                    <h4>Ingrese su RFC y CIEC, haremos una consulta al SAT para validarlo.</h4>
                    <input type="hidden" value="false" name="validacionSat" id="validacionSat"/>
                    <div class="form-group">
                        <label>RCF</label>
                        <input id="rfc" name="rfc" type="text" class="form-control required" aria-required="true" autocomplete = "off" onkeyup="javascript:this.value=this.value.toUpperCase();">
                    </div>
                    <div class="form-group">
                        <label>CIEC</label>
                        <div class="input-group">
                            <div class="input-group-append viewpass">
                                <span class="input-group-text" title="Mantener presionado para ver la contraseña">
                                    <i class="fa fa-eye"></i>
                                </span>
                            </div>
                            <input id="password" name="password" type="password" class="form-control required viewpass-input" data-view="false" aria-required="true" minlength="8" maxlength="20">
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button id="btn-sat-cancel" type="button" class="btn btn-secondary">Cancelar</button>
                        <button id="btn-sat" type="button" class="btn btn-color">Validar RFC</button>
                    </div>
                </form>
            </div>
            <!--Fin RFC-->
            <!--Cuentas Bancarias-->
            @*<h1>Cuentas bancarias</h1>
            <div>
                Contenido
            </div>*@
            <!--Fin Cuentas Bancarias-->
        @*</div>*@
    </div>
</div>