@model MVC_Project.WebBackend.Models.ProviderFilterViewModel
@using MVC_Project.WebBackend.AuthManagement
@using MVC_Project.WebBackend.AuthManagement.Models
@{
    ViewBag.Title = "Proveedores";

    var controllerName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    AuthUser user = (AuthUser)Authenticator.AuthenticatedUser;
    var hasFullAccessController = user.HasFullAccessController(controllerName);
}

@section styles {
    <style>
        .hide {
            display: none;
        }

        .custom-file-label::after {
            content: "Buscar"
        }
    </style>
}

<div class="wrapper content-padding wrapper-content animated fadeInRight">
    <div class="ibox float-e-margins box-degradient">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    @using (Html.BeginForm("GetProviders", "Provider", FormMethod.Post, new { @id = "SearchForm" }))
                    {
                        @*<div class="ibox-title">
                            <h5>Búsqueda</h5>
                        </div>*@
                        <div class="ibox-content clearfix">
                            <div class="row">
                                <div class="col-12 col-sm-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.RFC, new { @class = "" })*@
                                        <br />
                                        @Html.TextBoxFor(m => m.RFC, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "13", @autocomplete = "off", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.RFC).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.BusinessName, new { @class = "" })*@
                                        <br />
                                        @Html.TextBoxFor(m => m.BusinessName, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "200", @autocomplete = "off", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.BusinessName).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-12 col-sm-4">
                                    <div class="form-group">
                                        @*@Html.LabelFor(m => m.Email, new { @class = "" })*@
                                        <br />
                                        @Html.TextBoxFor(m => m.Email, new { @Class = "form-control form-control-sm input-text txtFiltro", filtro = "true", filtro_order = "1", @maxlength = "250", @autocomplete = "off", placeholder = HttpUtility.HtmlDecode(Html.DisplayNameFor(x => x.Email).ToHtmlString()) })
                                    </div>
                                </div>
                                <div class="col-12 offset-8 col-sm-4 col-lg-4">
                                    <br />
                                    <button type="button" class="btn btn-sm btn-button btn-filter-rol"><i class="fas fa-search"></i> Buscar</button>
                                    &nbsp;
                                    <button type="button" id="btnClearForm" class="btn btn-sm btn-button"><i class="fas fa-eraser "></i> Limpiar</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        @*<h5>Resultado</h5>*@
                        @if (hasFullAccessController)
                        {
                            <div class="ibox-tools">
                                <a href="@Url.Action("Create", "Provider")" class="btn btn-sm btn-button btn-d0"><span class="fas fa-plus-square"></span> Nuevo Proveedor</a>
                                <button type="button" class="btn btn-sm btn-button btn-import" data-toggle="modal" data-target="#ModalImporterClients"><span class="fas fa-upload"></span> Importar</button>
                                <button type="button" class="btn btn-sm btn-button btn-export"><span class="fas fa-download"></span> Exportar</button>
                            </div>
                        }
                    </div>
                    <div class="ibox-content">
                        <div class="table-responsive">
                            <table id="table" class="table table-striped table-bordered"></table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="ModalImporterClients" class="modal fade hidden-print" tabindex="-1" role="dialog">
            <div class="modal-dialog modal-lg" role="dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <div class="modal-title">
                            <h3>Importar proveedores</h3>
                        </div>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h4>El excel debe contener los siguientes columnas</h4>
                                        <ul>
                                            @*<li>No. (Celda sin contenido)</li>*@
                                            <li>Nombre(s) (*Obligatorio)</li>
                                            <li>Apellido(s) (*Obligatorio)</li>
                                            <li>RFC (*Obligatorio)</li>
                                            @*<li>CURP</li>*@
                                            <li>Nombre/Razón Social (*Obligatorio)</li>
                                            <li>Tipo Régimen Fiscal ("Persona Física" o "Persona Moral")</li>
                                            @*<li>Calle y Cruzamientos</li>
                                                <li>Número Exterior</li>
                                                <li>Número Interior</li>*@
                                            <li>C.P. (*Obligatorio)</li>
                                            @*<li>Colonia</li>
                                                <li>Alcaldía/Municipio</li>
                                                <li>Estado</li>
                                                <li>Domicilio Comercial </li>
                                                <li>Email</li>
                                                <li>Teléfono</li>
                                                <li>Fecha Creación (Celda sin contenido)</li>
                                                <li>RFC Cuenta (Celda sin contenido)</li>*@
                                        </ul>
                                        <br />
                                    </div>
                                    <div class="col-md-4">
                                        @if (hasFullAccessController)
                                        {
                                            <button type="button" class="btn btn-sm btn-color btn-export-template"><span class="fas fa-download"></span> Exportar</button>
                                        }
                                    </div>
                                </div>

                                @using (Html.BeginForm("ImportExcelProvider", "Provider", FormMethod.Post, new { @id = "postImportar" }))
                                {
                                    <div class="row">
                                        <div class="col-12 col-md-10">
                                            <div class="custom-file">
                                                <input type="file" name="Excel" class="custom-file-input" id="exampleFormControlFile1" onchange="loadFile(event, 'rutaExcel', this)"
                                                       accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel">
                                                <label class="custom-file-label" id="rutaExcel" for="exampleFormControlFile1">Seleccione el archivo...</label>
                                            </div>

                                            @*<div class="form-group">
                                                    <label for="exampleFormControlFile1">Archivo Excel</label>
                                                    <input type="file" name="Excel" class="form-control-file" id="exampleFormControlFile1" onchange="loadFile(event, 'rutaExcel', this)">
                                                </div>
                                                <span class="hide" ></span>*@
                                        </div>
                                        <div class="col-12 col-md-2">
                                            <label></label>
                                            <button type="button" class="btn btn-color btn-save-import" disabled="disabled" onclick="Guardar(event);"><span class="fas fa-upload"></span> Importar</button>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/daterangepicker")
    @Scripts.Render("~/plugins/jqueryFileDownload.js")

    <script>
        $(function () {
            var provider = new ProviderIndexControlador('table',
                '@Url.Action("GetProviders")',
                '@Url.Action("Edit")',
                '@Url.Action("ExportListProvider")',
                '@Url.Action("UploadProvider")',
                '@Url.Action("ExportTemplate")',
                '@Url.Action("Invoice", "Invoicing")',
                '@hasFullAccessController' == 'True'
            );
            provider.init();
        });
    </script>

    <script src="~/Scripts/views/Provider/Index.js"></script>
}
