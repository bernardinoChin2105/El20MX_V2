@model MVC_Project.WebBackend.Models.InvoicesReceivedListVM
@using MVC_Project.WebBackend.Controllers
@using MVC_Project.WebBackend.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />

    <meta charset="utf-8">
    @*<meta name="viewport" content="width=device-width">*@
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/templatepdf/css")

    <title></title>
    <link href="~/Content/template/bootstrap.min.css" rel="stylesheet" />
    <style>
        .img-responsive {
            width: 100%;
        }
    </style>
</head>
<body style="font-family:Arial; font-size:11px">
    <div>
        <table style="width:100%;">
            <tr>
                <td width="20%" rowspan=7>
                    @*<img style="float:left;" class="logo" src="@Model.Logo" />*@
                </td>
                <td width="20%"><strong>RFC emisor:</strong></td>
                <td width="20%">@Model.Emisor.Rfc</td>
                <td width="20%"><strong>Folio fiscal:</strong></td>
                <td width="20%">@Model.TimbreFiscalDigital.UUID</td>
            </tr>
            <tr>
                <td><strong>Nombre emisor:</strong></td>
                <td>@Model.Emisor.Nombre</td>
                <td><strong>Numero de serie del csd:</strong></td>
                <td>@Model.NoCertificado</td>
            </tr>
            <tr>
                <td><strong>RfC receptor:</strong></td>
                <td>@Model.Receptor.Rfc</td>
                <td><strong>Codigo postal, fecha y hora de emision:</strong></td>
                <td>@Model.LugarExpedicion @Model.Fecha</td>
            </tr>
            <tr>
                <td><strong>Nombre receptor:</strong></td>
                <td>@Model.Receptor.Nombre</td>
                <td><strong>Efecto de comprobante:</strong></td>
                <td>@Model.TipoDeComprobanteTexto</td>
            </tr>

            <tr>
                <td><strong>Uso CFDI:</strong></td>
                <td>@Model.Receptor.UsoCFDITexto</td>
                <td><strong>Regimen fiscal:</strong></td>
                <td>@Model.Emisor.RegimenFiscalTexto</td>
            </tr>
            <tr>
                @if (!String.IsNullOrEmpty(Model.ClaveCatastral))
                {
                    <td><strong>Clave Catastral:</strong></td>
                    <td>@Model.ClaveCatastral</td>
                }
                else
                {
                    <td></td>
                    <td></td>
                }
                <td><strong>Folio Interno:</strong></td>
                <td>@Model.Folio</td>
            </tr>
            <tr>
                @if (!String.IsNullOrEmpty(Model.PeriodoFacturacion))
                {
                    <td colspan=4>@Model.PeriodoFacturacion</td>
                }
            </tr>
        </table>
        <div style="clear:both;"></div>

    </div>

    <br />

    <div>
        <div style="height:750px">
            <table style="width:100%" class="tabla">
                <tr>
                    <th>Cantidad</th>
                    <th>Clave</th>
                    <th>Unidad</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Descuento</th>
                    <th>Importe</th>
                </tr>
                @foreach (var oConcepto in Model.Conceptos)
                {
                    <tr>
                        <td align="center">@oConcepto.Cantidad</td>
                        <td align="center">@oConcepto.ClaveProdServ</td>
                        <td align="center">@oConcepto.ClaveUnidad</td>
                        <td align="center">@oConcepto.Descripcion</td>
                        <td align="center">@oConcepto.ValorUnitarioFormateado</td>
                        <td align="center">@oConcepto.DescuentoFormateado</td>
                        <td align="center">@oConcepto.ImporteFormateado</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <br />
    <div>
        <table style="width:100%;">
            <tr>
                <td><strong>Monto con letras:</strong></td>
                <td>@Model.MonedaConLetra</td>
                <td><strong>Subtotal:</strong></td>
                <td>@Model.SubTotalFormateado</td>
            </tr>
            <tr>
                <td><strong>Forma de pago:</strong></td>
                <td>@Model.FormaPagoTexto</td>
                <td><strong>Descuento:</strong></td>
                <td>@Model.DescuentoFormateado</td>
            </tr>
            <tr>
                <td><strong>Metodo de pago:</strong></td>
                <td>@Model.MetodoPagoTexto</td>
                <td><strong>Total:</strong></td>
                <td>@Model.TotalFormateado</td>
            </tr>
        </table>
    </div>
    <br />
    <div class="textoContiguo" style="font-size:11px;">
        <strong>Sello CFDI </strong>
        <br />
        @Model.Sello
    </div>
    <br />
    <div class="textoContiguo" style="font-size:11px;">
        <strong>Sello SAT </strong>
        <br />
        @Model.TimbreFiscalDigital.SelloSAT
    </div>
    <div>
        <div style="width:25%;float:left;">
            <img src="@Model.QR" width="150" height="150" />

        </div>
        <div style="width:25%;float:left;"></div>
        <div style="width:73%;float:right;font-size:11px;">
            <table style="width:100%;">

                <tr>
                    <td><strong>RFC del proveedor de certificación:</strong></td>
                    <td>@Model.TimbreFiscalDigital.RfcProvCertif</td>
                    <td><strong>Fecha y hora de certificación:</strong></td>
                    <td>@Model.TimbreFiscalDigital.FechaTimbrado.ToString("yyyy-MM-dd HH:mm:ss")</td>
                </tr>
                <tr>
                    <td><strong>No. de serie del certificado SAT:</strong></td>
                    <td>@Model.TimbreFiscalDigital.NoCertificadoSAT</td>
                </tr>
            </table>

        </div>
        <div style="clear:both;"></div>
    </div>

</body>
</html>

<style>
    .tabla th {
        border-bottom: 1px solid #000;
    }

    .logo {
        max-width: 100%;
        width: 80px;
    }

    .textoContiguo {
        -ms-word-break: break-all;
        word-break: break-all;
        word-break: break-word;
        / Sólo WebKit -NO DOCUMENTADO / -ms-hyphens: auto;
        / Guiones para separar en sílabas / -moz-hyphens: auto;
        / depende de lang en <html> / -webkit-hyphens: auto;
        hyphens: auto;
    }
</style>