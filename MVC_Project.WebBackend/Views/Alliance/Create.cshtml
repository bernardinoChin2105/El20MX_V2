            $.datepicker.setDefaults($.datepicker.regional['es']);
            var mem = $('#data_1 .input-group.date').datepicker({
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                calendarWeeks: true,
                autoclose: true,
                dateFormat: "yy-mm-dd"
            });

            $('input').on('ifClicked', function (ev) { $(ev.target).click(); })

            $("#applyPeriod").click(function () {
