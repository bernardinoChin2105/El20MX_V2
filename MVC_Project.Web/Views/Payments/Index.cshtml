@model  MVC_Project.Web.Models.PaymentViewModel
@{
    ViewBag.Title = "Reporte de Pagos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    @Styles.Render("~/Content/template/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/Content/template/plugins/chosen/chosenStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("GetAllByFilter", "Payments", FormMethod.Post, new { @id = "SearchForm" }))
                {
                    <div class="ibox-title">
                        <h5>@ViewLabels.LABEL_SEARCH</h5>
                    </div>
                    <div class="ibox-content clearfix">
                        <div class="row">
                            <div class="col-xs-6">
                                <div class="form-group">
                                    N&uacute;mero de Orden
                                    @Html.TextBoxFor(m => m.OrderId, new { @Class = "form-control form-control-sm txtFiltro", maxlength = "40" })
                                </div>
                            </div>
                            <div class="col-xs-6">
                                <label>Fecha de Creación</label>
                                <div class="input-group input-daterange">
                                    @Html.EditorFor(x => x.FilterInitialDate, new { htmlAttributes = new { @Class = "form-control", id = "FilterInitialDate", @readonly = "readonly" } })
                                    <span class="input-group-addon">
                                        <i class="far fa-calendar-alt"></i>
                                    </span> <span class="input-group-addon"> a </span>
                                    @Html.EditorFor(x => x.FilterEndDate, new { htmlAttributes = new { @Class = "form-control", id = "FilterEndDate", @readonly = "readonly" } })
                                    <span class="input-group-addon">
                                        <i class="far fa-calendar-alt"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <span class="pull-right">
                                    <button type="button" id="btnSearchForm" class="btn btn-sm btn-primary btn-filter"><i class="fas fa-search"></i> @ViewLabels.LABEL_SEARCH</button>
                                    &nbsp;
                                    <button type="button" id="btnClearForm" class="btn btn-sm btn-default"><i class="fas fa-eraser "></i> @ViewLabels.LABEL_CLEAN</button>
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewLabels.LABEL_RESULTS</h5>
                    <div class="ibox-tools">
                        <button id="btnExportar" class="btn btn-sm btn-primary" type="button">
                            <i></i> Exportar (CSV)
                        </button>
                        @*<a href="@Url.Action("Create","Projects")" class="btn btn-primary"><span class="fas fa-plus-square"></span> @ViewLabels.LABEL_CREATE</a>*@
                    </div>

                </div>
                <div class="ibox-content">
                    <table id="table" class="table table-striped table-bordered"></table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/fullCalendar")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/validateUnobtrusive")
    <script src="~/Scripts/template/Utils.js"></script>
    <script src="~/Scripts/views/Payments/Index.js"></script>
    <script>
        $(function () {
            var tableCtrl = new PaymentsIndexControlador('table', '@Url.Action("GetAllByFilter")',
                [
                    { data: 'Id', title: "Id", visible: false },
                    { data: 'OrderId', title: "ID Orden" },
                    { data: 'CreationDate', title: "Fecha/Hora de Creación" },
                    { data: 'User', title: "Usuario" },
                    { data: 'Amount', title: "Monto" },
                    { data: 'PaymentMethod', title: "Método" },
                    { data: 'Status', title: "Estatus" },
                    { data: 'ConfirmationDate', title: "Fecha/Hora de Confirmación" },
                    { data: 'ProviderId', title: "ID Proveedor" }
                ]
            );
            tableCtrl.init();

            $('.input-daterange').datepicker({language: 'es', format: 'dd/mm/yyyy'});

            $(".btn-filter").click(function () {
                $('#table').DataTable().draw();
            });

            $("#btnClearForm").click(function () {
                $("#SearchForm").each(function () {
                    this.reset();
                });
                $('#table').DataTable().draw();
            });

            $('#btnExportar').on('click', function (e) {
                swal('TBD');
            });

        });
        
    </script>
}

