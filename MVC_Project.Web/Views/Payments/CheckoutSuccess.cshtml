@model  MVC_Project.Web.Models.PaymentViewModel
@using MVC_Project.Integrations.Payments;
@{
    ViewBag.Title = "Checkout Finished";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">

            <div class="ibox ">
                <div class="ibox-title">
                    @if (Model.ChargeSuccess)
                    {
                        <h5>Your order has been charged successfully!</h5>
                    }
                    else
                    {
                        <h5>We had a problem with your order!</h5>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (!string.IsNullOrEmpty(Model.Id))
                        {
                            <div class="col-sm-12">
                                <b>Tipo:</b> @Html.Raw(Model.PaymentMethod)
                                <br />
                                <b>ID Transacción:</b> @Html.Raw(Model.Id)
                                <br />
                                <b>ID Orden:</b> @Html.Raw(Model.OrderId)
                                <br />
                                <b>Monto:</b> @Html.Raw(Model.Amount)
                                <br />
                                <b>Descripción:</b> @Html.Raw(Model.Description)
                                <br />

                                @if (Model.PaymentMethod == PaymentMethod.BANK_ACCOUNT)
                                {
                                    <b>Fecha de Vencimiento:</b> @Html.Raw(Model.DueDate)
                                    <br />
                                    <b>Banco:</b> @Html.Raw(Model.BankName)
                                    <br />
                                    <b>CLABE:</b> @Html.Raw(Model.Clabe)
                                    <br />
                                    <b>Referencia:</b> @Html.Raw(Model.Name)
                                    <br />
                                    <b>Convenio:</b> @Html.Raw(Model.Agreement)
                                    <br />
                                    <b>Ficha de Pago:</b> <a href="@Html.Raw(Model.PaymentCardURL)" target="_blank" class="btn btn-block">Descarga</a>
                                    <br />
                                }
                            </div>
                        }
                        else
                        {
                            <div class="col-sm-12">
                                <b>Descripción:</b> @Html.Raw(Model.Description)
                                <br />
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

