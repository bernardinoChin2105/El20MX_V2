@model MVC_Project.Web.Models.UserImportViewModel

@{
    ViewBag.Title = "Importar Usuarios";
}

@section Styles {
    @Styles.Render("~/Content/template/plugins/chosen/chosenStyles")
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Importar Usuarios</h5>
                </div>
                <div class="ibox-content">

                    <p class="alert alert-info">
                        Tamaño máximo de carga de archivos del servidor: <b>10M</b>
                        <br />
                        Tipo de archivos aceptados: <b>XLSX, XLS</b>
                    </p>
                    @using (Html.BeginForm("Import", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "CreateForm", enctype = "multipart/form-data" }))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.ImportedFile, new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(model => model.ImportedFile, new { @class = "form-control", @required = "required", type = "file" })
                                    @Html.ValidationMessageFor(model => model.ImportedFile)
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Importar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/validate")
}

