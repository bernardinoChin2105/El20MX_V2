@model  MVC_Project.Web.Models.ReportOrdersViewModel
@{
    ViewBag.Title = "Reporte de Órdenes";
}
@section styles {
    @Styles.Render("~/Content/template/plugins/dataTables/dataTablesStyles")
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm("GetAllByFilter", "ReportService", FormMethod.Post, new { @id = "SearchForm" }))
                {
                    <div class="ibox-title">
                        <h5>Búsqueda</h5>
                    </div>
                    <div class="ibox-content clearfix">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label>Nombre o correo electrónico</label>
                                @Html.TextBoxFor(m => m.Nombre, new { @Class = "form-control form-control-sm txtFiltro", maxlength = "100", filtro = "true", filtro_order = "1" })
                            </div>
                        </div>

                        <div class="col-xs-3">
                            <div class="form-group">
                                <label>Estado</label>
                                @Html.DropDownListFor(x => x.Status, new SelectList(ViewBag.OpcionesStatus, "value", "text"), new { @class = "selectpicker form-control", data_live_search = "true", data_style = "btn-default", style = "position: relative;", filtro = "true", filtro_order = "2" })
                            </div>
                        </div>

                        <div class="col-xs-3">
                            <div class="form-group">
                                <label>Tienda</label>
                                @Html.DropDownListFor(x => x.Store, new SelectList(ViewBag.OpcionesStore, "value", "text"), "Todos", new { @class = "selectpicker form-control", data_live_search = "true", data_style = "btn-default", style = "position: relative;", filtro = "true", filtro_order = "3" })
                            </div>
                        </div>

                        <div class="col-xs-3">
                            <div class="form-group">
                                <label>Vendedor</label>
                                @Html.DropDownListFor(x => x.Staff, new SelectList(ViewBag.OpcionesStaff, "value", "text"), "Todos", new { @class = "selectpicker form-control", data_live_search = "true", data_style = "btn-default", style = "position: relative;", filtro = "true", filtro_order = "4" })
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <label>Rango de fechas</label>
                            <div class="input-group input-daterange">
                                @Html.EditorFor(x => x.Inicio, new { htmlAttributes = new { @Class = "form-control", id = "Inicio", @readonly = "readonly", filtro = "true", filtro_order = "5" } })
                                <span class="input-group-addon">
                                    <i class="far fa-calendar-alt"></i>
                                </span> <span class="input-group-addon"> a </span>
                                @Html.EditorFor(x => x.Fin, new { htmlAttributes = new { @Class = "form-control", id = "Fin", @readonly = "readonly", filtro = "true", filtro_order = "6" } })
                                <span class="input-group-addon">
                                    <i class="far fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>

                        <div class="col-xs-4">
                            <br />
                            <button type="button" class="btn btn-sm btn-primary btn-filter-Order"><i class="fas fa-search"></i> Buscar</button>
                            <button type="button" id="BtnClearForm" class="btn btn-sm btn-default"><i class="fas fa-eraser "></i> Limpiar</button>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Resultado</h5>
                    <div class="ibox-tools">
                        <button id="btnExportarExcel" class="btn btn-sm btn-primary" type="button">
                            <i></i> Exportar (CSV)
                        </button>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="table" class="table table-striped table-bordered"></table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="modalDetails-container" class="modal fade hidden-print" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>

        </div>
        
    </div>
</div>

@section scripts{
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/fullCalendar")
    @Scripts.Render("~/bundles/fileDownload")
    <script src="~/Scripts/template/Utils.js"></script>
    <script src="~/Scripts/views/Reports/OrderIndex.js"></script>

    <script>
        $(function () {
            var orders = new OrderIndexControlador(
                'table',
                'BtnClearForm',
                'SearchForm',
                '@Url.Action("GetAllByFilter")',
                '@Url.Action("ModalDetails")',
                '@Url.Action("ModalDeleteAction")'
            );
            orders.init();
        });
        $('#Inicio').val("");
        $('#Fin').val("");
        $('.input-daterange').datepicker(
            {
                language: 'es', format: 'dd/mm/yyyy'
            });
        $('#Inicio').val("");
        $('#Fin').val("");

        $(".btn-filter-Order").click(function () {
            $('#table').DataTable().draw();
        });
        var btnExcel = $('#btnExportarExcel');
            btnExcel.on('click', function (e) {
                //var loading = new Loading();
                var formSearh = $('#SearchForm');
                var action = formSearh.attr("action");
                formSearh.attr("httpMethod", "POST");
                formSearh.attr("data-export", 1);
                formSearh.method = 'POST';
                //console.log(formSearh);
                //loading.start();
                $.fileDownload("@Url.Action("ExportExcel", "ReportService")", {
                    successCallback: function () {
                        //loading.stop();
                    },
                    abortCallback: function () {
                        //loading.stop();
                    },
                    failCallback: function () {
                        swal(options.mensajeFalloDescargarFactura);
                        //loading.stop();
                    },
                    httpMethod: "POST",
                    data: formSearh.serialize()
                });
                formSearh.attr("action", action);
                formSearh.attr("data-export", 0);
            });
    </script>

}